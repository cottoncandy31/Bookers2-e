<p id="notice"></p>

<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      
<h1>User info</h1>
<% if @user.errors.any? %>
  <h3><%= @user.errors.count %>errors prohibited this obj from being saved:</h3>
  <ul>
    <% @user.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

  <%= form_with model: @user do |f| %>

    <div class="form-group">
      <h6>Name</h6>
      <%= f.text_field :name %>
    </div>
      
    <div class="form-group">
      <h6>profile_image</h6>
    <div><%= f.file_field :profile_image, accept: "profile_image/*" %></div>
    </div>
    
    <div class="form-group">
      <h6>Introduction</h6>
      <%= f.text_area :introduction %>
    </div>
    
    <div><%= f.submit 'Update User', class: 'btn btn-secondary' %></div>
  <% end %>
